.k-header
  = render partial: 'layouts/header'

.k__main
  .k__showMain
    .k__content
      .k__itemBox
        .k__itemBox__name
          = @items.name
        .k__itemBox__body
          %ul
            %li
              = image_tag @items.images[0].src.to_s, class:"firstImage"
              %ul
                - @items.images.each do |image|
                  %li
                    = image_tag image.src.to_s, :width => "75", :height => "75",class:"imageList"
        .k__itemBox__price
          ¥ 
          =@items.price
          .k__itemBox__price-detail
            %span (税込)
            %span 送料込み
        .k__itemDetail
          .noticeMsg
            = simple_format @items.description
        .k__table
          %table
            %tbody
              %tr
                %th 出品者
                %td.k__table--blue
                  = link_to @items.user.nickname
              %tr
                %th カテゴリー
                %td.k__table--blue
                  = link_to "#" do
                    = @items.category.name　#リンク先は未実装
              %tr
                %th ブランド
                %td
                  =@items.brand.name
              %tr
                %th 商品のサイズ
                %td
                  =@items.size
              %tr
                %th 商品の状態
                %td
                  =@items.condition.name
              %tr
                %th 配送料の負担
                %td
                  = @items.postage
              %tr
                %th 発送元の地域
                %td
                  = @items.prefecture.name
              %tr
                %th 発送日の目安
                %td
                  =@items.wait
        .k__optonalArea
          %ul
            %li.k__optinalBtn.k__likeBtn              
              =icon('fa','star')
              お気に入り 0
          %ul.k__optional
            %li.k__optionalBtn
              =link_to "#" do
                =icon('fa','flag')
                不適切な商品の通報

      .k__itemChangeBox
        %ul.k__itemChangeBox__btnList
          -if @item.buyer_id.present?
            %li.k__itemChangeBox__btnList__soldOutNotice
              売り切れました
          - else
            %button.k__itemChangeBox__btnList__buyBtn
              購入画面に進む
      - if user_signed_in? && current_user.id == @item.user_id
        .r__itemManageBox
          = link_to "編集", "#", class: "r__itemManageBox__edit" #リンク先は未実装
          = link_to "削除", "#", method: :delete, class: "r__itemManageBox__delete" #リンク先は未実装

      - else 
        .k__itemChangeBox
          %ul.k__itemChangeBox__btnList
            %li 
              = link_to "#" do 
                %button.k__itemChangeBox__btnList__buyBtn
                  購入画面に進む
                  
      .k__commentBox
        .k__commentBox__list
          .k__commentBox__list__icon
            =icon('fa','user')
          .k__commentBox__list__content
            .k__commentBox__list__content__name
              バイヤーテスト
            .k__commentBox__list__content__message
              test
            .k__commentBox__list__content__date
              2020-06-09 12:00:00 +0900

        .form
          %input.k__comment{type: "text"}
          .k__noticeMsg
            %p
              相手のことを考え丁寧なコメントを心がけましょう。
              %br 不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %br
          %input.k__commentBtn{type: "submit", value: "コメントする"}
    .k__links
      %ur
        %li
          = link_to "#" do
            <前の商品
        %li
          = link_to "#" do
            後ろの商品>

.k-footer
  = render partial: 'layouts/footer'