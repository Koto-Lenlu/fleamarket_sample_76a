        %option(id="19") 山梨県
        %option(id="20") 長野県
        %option(id="21") 岐阜県
        %option(id="22") 静岡県
        %option(id="23") 愛知県
        %option(id="24") 三重県
        %option(id="25") 滋賀県
        %option(id="26") 京都府
        %option(id="27") 大阪府
        %option(id="28") 兵庫県
        %option(id="29") 奈良県
        %option(id="30") 和歌山県
        %option(id="31") 鳥取県
        %option(id="32") 島根県
        %option(id="33") 岡山県
        %option(id="34") 広島県
        %option(id="35") 山口県
