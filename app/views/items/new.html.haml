      %p.message 発送までの日数（必須）
      %select(name="wait" class ="select-box")
        %option 選択してください
        %option(value="fast") 1~2日で発送
        %option(value="normal") 2~3日で発送
        %option(value="slow") 4~7日で発送
    .t__price__container
      %p.message 価格について（¥300〜9,999,999）
      .content-flex
        .message 価格（必須）
        .price
          %span ¥
          %input(type="number" placeholder = "最低価格 ¥300" class= "price-box")
    .t__submit__container
      .button
        %input(type="submit" name="exhibition" value="出品する" class="exhibition")
      .back
        = link_to "もどる", "#"
