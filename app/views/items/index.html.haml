-# %h1 Items#index
-# %p Find me in app/views/items/index.html.erb

.container
  .header
    .header__logo
      = link_to image_tag('logo.png', :width => '170', :height => '60'), root_path
      .t__head__bar__search__select
        -if user_signed_in?
          = link_to users_path(current_user),id: "logBtn" do
            .t__head__bar__search__select-login マイページ
          = link_to destroy_user_session_path, method: :delete, id: "newBtn" do
            .t__head__bar__search__select-login ログアウト
        -else
          = link_to new_user_session_path,id: "logBtn" do
            .t__head__bar__search__select-login ログイン
          = link_to new_user_registration_path,id: "newBtn" do
            .t__head__bar__search__select-login 新規会員登録

  .main
    .main__contents
      .main__contents__first
        購入内容の確認
      .main__contents__second
        .main__contents__second__middle
          .main__contents__second__middle__item__image
            <img data-src="https://static.mercdn.net/thumb/photos/m47880230608_1.jpg?1591170738" class="lazyloaded is-higher-width" alt="" width="80" height="60" src="https://static.mercdn.net/thumb/photos/m47880230608_1.jpg?1591170738">
          .main__contents__second__middle__item__detail
            %p.item__name
              NIKEコラボレーション ワッフルレーサー Black / 27
            %p.item__price
              ¥34,439 （税込）送料込み
        .main__contents__second__bottom
          .main__contents__second__bottom__price
            .main__contents__second__bottom__price--left
              支払い金額
            .main__contents__second__bottom__price--right
              ¥34,439
          .main__contents__second__bottom__purchase
            %button{type: "submit", value:"購入する", class:'submit-btn'}
              .letter
                購入する
  .footer
    .footer__logo
      = link_to image_tag('logo-white.png', :width => '170', :height => '60'), root_path
    .footer__c--mark
      %p ©FURIMA