.i__header
  .i__header__inner
    .i__header__inner__main
      .i__header__inner__main__logo
        = link_to "/" do
          = image_tag 'logo.png', alt: '', height: '40px', width: '140px', class: 'img-logo'
      %input.i__header__inner__main__search{name: "search", placeholder: "キーワードから探す", type: "search", value: ""}/ 
      .i__header__inner__main__btn(type="submit")
        = link_to "/" do
          = image_tag 'icon-search 1.png', alt: '',height: '22px',width:'22px',type: 'submit', class: 'header__inner__main__btn__icon'

    .i__header__inner__nav
      .ul.i__header__inner__nav__left
        %li.i__header__inner__nav__left__first カテゴリー
        %li.i__header__inner__nav__left__second ブランド
      .ul.i__header__inner__nav__right
        %li.i__header__inner__nav__right__first ログイン
        %li.i__header__inner__nav__right__second 新規会員登録

.i__main
  .i__main__items
    %h2.i__main__items__head 新着アイテム一覧
    .i__main__items__lists
      .i__main__items__lists__items
        = render @items

.i__banner
  .i__banner__visual
    .i__banner__visual__content
      %h2.i__banner__visual__content__top だれでも簡単、人生を変えるフリマアプリ
      %p.i__banner__visual__content__text 今すぐ無料ダウンロード！
    .i__banner__visual__logo
      .i__banner__visual__logo__app
        = link_to "http://google.co.jp" do
          = image_tag 'apple-icon.png', alt: '',height: '50px', width: '165px', class: 'apple'
      .i__banner__visual__logo__app
        = link_to "http://google.co.jp" do
          = image_tag 'google-play.png', alt: '', height: '50px', width: '165px',class: 'google'
.i__footer
  .i__footer__contents
    .ul.i__footer__contents__list
      %h2.i__footer__contents__list__top FURIMAについて
      %li
        = link_to '会社概要（運営会社）', "/", class: "i__footer__contents__list__top" 
      %li
        = link_to 'プライバシーポリシー', "/", class: "i__footer__contents__list__top" 
      %li
        = link_to 'FURIMA利用規約', "/", class: "i__footer__contents__list__top" 
      %li
        = link_to 'ポイントに関する特約', "/", class: "i__footer__contents__list__top" 
    .ul.i__footer__contents__list
      %h2.i__footer__contents__list__top FURIMAを見る
      %li
        = link_to 'カテゴリー一覧', "/", class: "i__footer__contents__list__top" 
      %li
        = link_to 'ブランド一覧', "/", class: "i__footer__contents__list__top" 
    .ul.i__footer__contents__list
      %h2.i__footer__contents__list__top ヘルプ＆ガイド
      %li
        = link_to 'FURIMAガイド', "/", class: "i__footer__contents__list__top" 
      %li
        = link_to 'FURIMAロゴ利用ガイドライン', "/", class: "i__footer__contents__list__top"

      %li
        = link_to 'お知らせ', "/", class: "i__footer__contents__list__top" 

  .i__footer__logo
    = link_to "/" do
      = image_tag 'logo-white.png', alt: '', height: '40px', width: '140px', class: 'footer__logo__icon'
  %p © FURIMA
  .i__btn__icon
    %span.i__btn__icon__text 出品する
    = link_to "/" do
      = image_tag 'icon_camera.png', alt: '' , height: '55px', width: '55px', class: ''