          .field
            = f.label "ニックネーム"
            %span.require 必須
            %br/ 
            = f.text_field :email, autofocus: true, autocomplete: "nickname", class: "r__input-default", placeholder: "例 はたさん" 
          .field
            = f.label "Eメールアドレス"
            %span.require 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "r__input-default", placeholder: "Eメールアドレスを入力してください"
          .field
            = f.label "パスワード"
            %span.require 必須
            - if @minimum_password_length
              %em
                (7文字以上)
            %br/
            = f.password_field :password, autocomplete: "new-password", class: "r__input-default", placeholder: "7文字以上で入力"
          .field
            = f.label "パスワード(確認)"
            %span.require 必須
